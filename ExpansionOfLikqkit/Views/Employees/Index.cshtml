@model ExpansionOfLikqkit.ViewModels.EmployeesViewModel

@{
    ViewBag.Title = "Index";
}

<br />
@using (Html.BeginForm("Index", "Employees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("LastName")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("FirstName")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("Title")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("Address")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.Address, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("City")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.City, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.Raw("Notes")
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SearchList.Notes, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="搜尋" class="btn btn-primary" />
        </div>
    </div>
}

    <table class="table">
        <tr>
            <th>LastName</th>
            <th>FirstName</th>
            <th>Title</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>PostalCode</th>
            <th>Country</th>
            <th>Extension</th>
            <th>Notes</th>
        </tr>

        @foreach (var item in Model.EmployeesDataList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Extension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }

    </table>